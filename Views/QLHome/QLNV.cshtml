@model IEnumerable<QLBanVePhim.Models.nguoi_dung>
@{
    ViewBag.Title = "QL Nhân Viên";
    Layout = "~/Views/Shared/ViewQLHome.cshtml";
}
<div class="left">
    <div class="card">
        <div class="card-body">
            <center><h3>Tra cứu nhân viên</h3></center>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Mã nhân viên
                </label>
                <div class="input-group mb-3">
                    <span class="input-group-text">ID</span>
                    <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                </div>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Tên nhân viên
                </label>
                <div class="input-group mb-3">
                    <span class="input-group-text">Tên</span>
                    <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                </div>
            </div>
            <br />
            <div>
                <center>
                    <input type="button" class="btn btn-success" onclick="location.href='/QLHome/AddNV';" value="Thêm nhân viên" />
                </center>
            </div>
        </div>
    </div>
</div>
<div class="right">
    <div class="card">
        <div class="card-body">
            <div class="container">
                <table class="table table-hover shadow p-3 mb-5 bg-white rounded">
                    <thead class="thead-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ho_ten)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.so_cmnd)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.so_dien_thoai)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.gioi_tinh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.vai_tro.ten)
                            </th>
                        </tr>
                    </thead>
                    @if (Model.Count() == 0)
                    {
                        <tr> <td colspan="5"> Records not found </td></tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr onclick="window.location.href = '/QLHome/EditNV/@Html.DisplayFor(modelItem => item.id)';">
                                <td>
                                    @Html.DisplayFor(modelItem => item.ho_ten)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.so_cmnd)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.so_dien_thoai)
                                </td>
                                <td>
                                    @((bool)item.gioi_tinh ? "Nam":"Nữ")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.vai_tro.ten)
                                </td>
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>
    </div>
</div>