        <div class="card-body" style="height:600px">
            <center> <h3>Thêm phim</h3></center>
            <div class="left-in" style="float:left;">
                <table>
                    <tr>
                        <td width="150px">@Html.LabelFor(model => model.hinh_anh)</td>
                        <td width="70%">@Html.EditorFor(model => model.hinh_anh, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                    <tr>
                        <td width="150px">@Html.LabelFor(model => model.ten)</td>
                        <td width="70%">@Html.EditorFor(model => model.ten, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                    <tr>
                        <td style="padding-top: 10px; padding-bottom: 10px;">@Html.LabelFor(model => model.thoi_luong)</td>
                        <td>@Html.EditorFor(model => model.thoi_luong, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.gioi_han_tuoi)</td>
                        <td>@Html.EditorFor(model => model.gioi_han_tuoi, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>

                </table>
            </div>
            <div class="right-in" style="float:left;padding-top:20px">
                <table>
                    <tr>
                        <td width="150px">@Html.LabelFor(model => model.dien_vien)</td>
