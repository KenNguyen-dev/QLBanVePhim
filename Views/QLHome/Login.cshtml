@model QLBanVePhim.Models.nguoi_dung

@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/Login.cshtml";
}


<div class="loginContainer">
    <h1 style="text-align:center">Đăng nhập</h1>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal" id="formDangNhap">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Email
                @Html.TextBoxFor(model => model.email, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                Mật khẩu
                @Html.PasswordFor(model => model.mat_khau, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.mat_khau, "", new { @class = "text-danger" })
            </div>

            <input type="submit" value="Đăng nhập" class="btn btn-success btn-block btn-large" style="padding:5px; width:100%" />
        </div>
    }
</div>