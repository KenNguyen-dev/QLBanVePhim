@model IEnumerable<QLBanVePhim.Models.phim>
@{
    ViewBag.Title = "QLPhim";
    Layout = "~/Views/Shared/ViewQLHome.cshtml";
}


<div class="left" style="width:25%;font-size:1.5rem">
    <div class="card" style="height:600px; margin-right:5px;">
        <div class="card-body">
            <Center><p>Tra cứu phim</p></Center>
            <div class="form-check">
                <input class="form-check-input" style="margin-top:13px" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Tên phim
                </label>
                <div class="input-group mb-3">
                    <span class="input-group-text">ID</span>
                    <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                </div>
            </div>
            <div class="form-check">
                <input class="form-check-input" style="margin-top:13px" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Ngày công chiếu
                </label>
                <div class="input-group mb-3">
                    <span class="input-group-text">Tên</span>
                    <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                </div>
            </div>
            <br>
            <Center><p>Tools</p></Center>
            <div>
                <center>
                    <input type="button" onclick="location.href='/QLPhim/AddPhim';" value="Thêm phim" />
                </center>
            </div>
        </div>
    </div>
</div>
<style>
    .col-sm {
        border: 1px solid black;
        padding: 5px;
    }
</style>
<div class="right" style="">
    <div class="card">
        <div class="card-body" style="height:600px">
            <div class="container">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ten)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.thoi_luong)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ngay_cong_chieu)
                        </th>
                        <th>
                        </th>
                    </tr>
                    @if (Model.Count() == 0)
                    {
                        <tr> <td colspan="5"> Records not found </td></tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ten)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.thoi_luong) Phút
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ngay_cong_chieu)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "EditPhim", new { id = item.id })
                                </td>
                            </tr>
                        }
                    }

                </table>
            </div>
        </div>
    </div>
</div>



