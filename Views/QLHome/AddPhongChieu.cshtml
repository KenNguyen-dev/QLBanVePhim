@model QLBanVePhim.Models.phong_chieu

@{
    ViewBag.Title = "Thêm Phòng Chiếu";
    Layout = "~/Views/Shared/ViewQLHome.cshtml";
}
<script src="~/Scripts/admin/add.js"></script>
@using (Html.BeginForm())
{
    <div class="container bodyContainer">
        <div class="row">
            <div class="col-xl-4">
                <p><center>Thêm Phòng Chiếu</center></p> <hr />
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.id, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control", @onInput = "onInput_PhongChieu()" } })
                            @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <p><center>Preview</center></p> <hr />
                <center>
                    <div class="card previewCardContainer" style="min-height:450px !important;">
                        <div class="card-body previewCardNoBreak">
                            <h4 class="card-title" id="previews_id">ID</h4>
                            <p class="card-subtitle text-muted">10 dãy, 10 cột</p>
                            <div class="card-text container">
                                @{string[] col = new string[] { "A", "B", "C", "D", "E", "F", "G", "H", "I", "J" };}
                                @for (int i = 0; i <= 10; i++)
                                {
                                    <div class="row">
                                        @for (int j = 0; j <= 10; j++)
                                        {
                                        <div class="col">
                                            @if (j != 0)
                                            {
                                                if (i == 0)
                                                {
                                                    @col[j - 1]
                                                }
                                                else if ((i >= 3 && i <= 7) && (j >= 4 && j <= 7))
                                                {
                                                    <font color="#A52A2A">
                                                        <i class="fas fa-couch"></i>
                                                    </font>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-couch"></i>
                                                }
                                            }
                                            else if (i != 0)
                                            {
                                                string num = i < 10 ? "0" + i : i + "";
                                                @num
                                            }
                                        </div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="form-group" style="padding-top:10px">
                            <center>
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </center>
                        </div>
                    </div>
                </center>
            </div>
        </div>
    </div>
}

@Scripts.Render("~/bundles/jqueryval")