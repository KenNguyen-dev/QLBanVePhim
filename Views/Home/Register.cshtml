@model QLBanVePhim.Models.khach_hang

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/SharedHomepage.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">


<style>
.formDangKy {
    width: 70%;
    background-color: antiquewhite;
    margin-bottom: 2px;
    margin:auto;
    border:1px solid black;
    border-radius:10px 10px;
    padding:10px;
    margin-top:2px;
}

.btnDangKy{
    border:1px solid black;
    border-radius:5px 5px;
    background-color:lightblue;
    color:white;
    font-weight:bold;
    padding:5px
}

.form-control {
    text-align: left;
    width: 100%;
}


.col-form-label {
    font-weight: bold;
    font-size: 20px;
}
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


<div class="form-horizontal formDangKy">
    <h1 style="text-align:center; background-color:antiquewhite; margin-top:8px; margin-bottom:0px">Đăng kí thành viên</h1>
    <p style="text-align:center; background-color:antiquewhite; font:italic; margin-bottom:0px; padding:5px">Vui lòng nhập đầy đủ thông tin</p>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <p style="font-weight:bold">Họ tên</p>
                    <div>
                        @Html.EditorFor(model => model.ho_ten, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ho_ten, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p style="font-weight:bold">CMND</p>
                    <div>
                        @Html.EditorFor(model => model.so_cmnd, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.so_cmnd, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p style="font-weight:bold">Mật Khẩu</p>
                    <div>
                        @Html.EditorFor(model => model.mat_khau, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.mat_khau, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p style="font-weight:bold">SDT</p>
                    <div>
                        @Html.EditorFor(model => model.so_dien_thoai, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.so_dien_thoai, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p style="font-weight:bold">Email</p>
                    <div>
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <p style="font-weight:bold">Địa chỉ</p>
                    <div>
                        @Html.EditorFor(model => model.dia_chi, new { htmlAttributes = new { @class = "form-control" } })                
                    </div>
                </div>

                <div class="form-group">
                    <p style="font-weight:bold">Ngày sinh</p>
                    <div>
                        @Html.EditorFor(model => model.ngay_sinh, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    <p style="font-weight:bold">Giới tính</p>
                    <div>
                        <div class="checkbox">
                            @Html.DropDownListFor(model => model.gioi_tinh, new SelectList(new[]
                               {
                                   new SelectListItem { Value = "True", Text = "Nam" },
                                   new SelectListItem { Value = "False", Text = "Nữ" },
                               },
                               "Value",
                               "Text"
                               ),
                        new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <input type="submit" value="Đăng ký thành viên" class="btnDangKy" />
                    </div>
                </div>


            </div>
            
        </div>

    </div>

   

   
</div>
}
