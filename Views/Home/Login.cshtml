@model QLBanVePhim.Models.khach_hang

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/SharedHomepage.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">



<style>
    #formDangNhap {
        width: 70%;
        background-color: antiquewhite;
        margin-bottom: 5px;
        margin:auto;
        height:450px;
        margin-top:5px;
        line-height:50px;
    }

    .form-control {
        width: 100%;
    }

    #formDangNhap.row:nth-child(even) {
        background-color: antiquewhite;
    }

    #formDangNhap.row:nth-child(odd) {
        background-color: antiquewhite;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" id="formDangNhap">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container-fluid">
        <div class="row">
            <div class="col-7">
                <div class="form-group">
                    <strong>Email</strong>
                    @Html.TextBoxFor(model => model.email, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <strong>Mật khẩu</strong>
                    @Html.PasswordFor(model => model.mat_khau, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.mat_khau, "", new { @class = "text-danger" })
                </div>

                <input type="submit" value="Đăng nhập" class="btn btn-success" style="padding:5px; width:100%" />
            </div>
            

            
        </div>

        </div>
</div>
}