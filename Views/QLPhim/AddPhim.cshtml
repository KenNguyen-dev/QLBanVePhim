                    <div class="form-group" style="padding-top:10px">
                        <center>
                            <input type="submit" value="Thêm Phim" class="btn btn-primary" />
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

@Scripts.Render("~/bundles/jqueryval")