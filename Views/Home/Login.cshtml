@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/SharedHomepage.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">



<style>
    .formDangNhap {
        text-align: center;
        width: auto;
        background-color: antiquewhite;
        margin-bottom: 5px;
    }

    .form-control {
        text-align: center;
        width: 500px;
    }

    .formDangNhap.row:nth-child(even) {
        background-color: antiquewhite;
    }

    .formDangNhap.row:nth-child(odd) {
        background-color: antiquewhite;
    }
</style>

<form class="formDangNhap">
        <h1 style="text-align:center; background-color:antiquewhite; margin-top:8px; margin-bottom:0px;padding:5px">ĐĂNG NHẬP</h1>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label" style="font:bold">Email</label>
            <input type="text" class="form-control" id="email" placeholder="Nhập email" />
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Password:</label>
            <input type="password" class="form-control" id="passWord" placeholder="Nhập password" />
        </div>

        <input type="submit" value="Đăng nhập" class="btn btn-success" style="padding:5px"/>


</form>