@{
    ViewBag.Title = "Lỗi";
    Layout = "~/Views/Shared/ViewQLHome.cshtml";
}
<style>
    #title1 {
        position: absolute;
        top: 20%;
        left: 0;
        right: 0;
        color: #FFF;
        text-align: center;
        font-family: sans-serif;
        font-weight: 400;
        font-size: 90px;
    }
</style>
<div id='title1'>
    <p>
        Đã Xảy Ra Lỗi
    </p>
    <p style="font-size:18px !important">

        @if ((ViewBag.Error).ToString().Contains("conflicted with the REFERENCE constraint"))
        {
            <text>
                Hãy kiểm tra lại dữ liệu<br />
                Không xóa được dữ liệu mà mục khác đang dùng</text> <br />
        }
        else if ((ViewBag.Error).ToString().Contains("Violation of PRIMARY KEY constraint"))
        {
            <text>Hãy kiểm tra lại dữ liệu bạn đã nhập<br />
                ID bạn vừa nhập đã trùng với ID của dữ liệu khác</text><br />
        }
        else if ((ViewBag.Error).ToString().Contains("Error Date"))
        {
            <text>Hãy kiểm tra lại dữ liệu bạn đã nhập<br />
                Ngày chiếu của suất chiếu không được trước ngày công chiếu của phim</text><br />
        }
        else
        {
            <text>
                Hãy kiểm tra lại dữ liệu<br />
                Lỗi không xác định! Hãy xem Error Log.
            </text><br />
        }
        <br /><br />
        <button type="button" class="btn btn-dark col-6" data-toggle="modal" data-target="#ErrorPopup">
            <i class="fas fa-exclamation-triangle"></i>
            Error Log
        </button>
    </p>
</div>
<!-- Modal -->
<div class="modal fade" id="ErrorPopup" tabindex="-1" role="dialog" aria-labelledby="ErrorPopup" aria-hidden="true">
    <div class="modal-xl modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Error Log</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @ViewBag.Error
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>