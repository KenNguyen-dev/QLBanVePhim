@model IEnumerable<QLBanVePhim.Models.kich_co_do_an>

@if (Model.Count() == 0)
{
    <p>???</p>
}
else
{
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="row" style="margin-top:5px;">
                @if (ViewBag.SizeGot.Contains(item.id))
                {
                    <button style="margin-right:5px;" onclick="window.location.href='/QLDoAn/PopSize/@ViewBag.ID?size=@item.id'" class="col btn btn-primary">
                        Xóa Size @Html.DisplayFor(modelItem => item.ten)
                    </button> }
                else
                {
                    <button style="margin-right:5px;" onclick="window.location.href = '/QLDoAn/AppendSize/@ViewBag.ID?size=@item.id'" class="col btn btn-outline-primary">
                        Thêm Size @Html.DisplayFor(modelItem => item.ten)
                    </button>
                }
            </div>
        }
    </div>
}