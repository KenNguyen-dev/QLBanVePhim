@model IEnumerable<QLBanVePhim.Models.suat_chieu>
    @{
    ViewBag.Title = "QLSuatChieu";
    Layout = "~/Views/Shared/ViewQLHome.cshtml";
    }

    <style>
        .left {
            width: 25%;
            font-size: 1.5rem;
        }

        .card {
            height: 600px;
            margin-right: 5px;
        }

        .custom-control-input {
            margin-top: 30px;
        }

        .card-body {
            justify-content: center
        }

        .table {
            text-align: center;
        }

        .modalItem {
            display: flex;
            justify-content: space-between;
        }

        .form-control1 {
            width: 20%;
            height: 30px;
            font-size: 12px;
        }
    </style>
    <div class="left">
        <div class="card">
            <div class="card-body">
                <h3 style="text-align:center">Tra cứu suất chiếu</h3>
                <form style="padding-top:20px">
                    <div class="custom-control custom-checkbox mb-3">
                        <input type="checkbox" class="custom-control-input" id="customControlValidation1" checked>
                        <label class="custom-control-label" for="customControlValidation1">Ngày chiếu</label>
                        <input id="datepicker" />
                    </div>
                    <div class="custom-control custom-checkbox mb-3">
                        <input type="checkbox" class="custom-control-input" id="customControlValidation2">
                        <label class="custom-control-label" for="customControlValidation2">Tên phim</label>
                        <select class="form-control" id="exampleFormControlSelect1">
                            <option>Bố già</option>
                            <option>Lật mặt</option>
                            <option>Baymax</option>
                        </select>
                    </div>
                    <div class="custom-control custom-checkbox mb-3">
                        <input type="checkbox" class="custom-control-input" id="customControlValidation3">
                        <label class="custom-control-label" for="customControlValidation3">Tình trạng</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                            <label class="form-check-label" for="exampleRadios1">
                                Đang chiếu
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                            <label class="form-check-label" for="exampleRadios2">
                                Sắp chiếu
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option2">
                            <label class="form-check-label" for="exampleRadios3">
                                Đã chiếu
                            </label>
                        </div>
                    </div>
                </form>
                <input type="button" onclick="location.href='/QLHome/AddSuatChieu';" value="Thêm Suất chiếu" />
            </div>
        </div>
    </div>

    <div class="right">
        <div class="card">
            <div class="card-body" style="height:600px">
                <div class="container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.id)</th>
                                <th>@Html.DisplayNameFor(model => model.phim_id)</th>
                                <th>@Html.DisplayNameFor(model => model.gio_bat_dau)</th>
                                <th>@Html.DisplayNameFor(model => model.gio_ket_thuc)</th>
                                <th>@Html.DisplayNameFor(model => model.ngay_chieu)</th>
                                <th>@Html.DisplayNameFor(model => model.phong_chieu_id)</th>
                                <th>@Html.DisplayNameFor(model => model.dinh_danh_phim_id)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() == 0)
                            {
                            <tr> <td colspan="4"> Records not found </td></tr>
                            }
                            else
                            {
                            foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.phim_id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.gio_bat_dau)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.gio_ket_thuc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ngay_chieu)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.phong_chieu_id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.dinh_danh_phim_id)
                                </td>
                            </tr>
                            }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>