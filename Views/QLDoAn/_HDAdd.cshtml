@model QLBanVePhim.Models.hoa_don_chi_tiet

<script src="~/Scripts/admin/add.js"></script>
@using (Html.BeginForm("HDAddDoAn", "QLDoAn", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.hoa_don_id, htmlAttributes: new { @Value = ViewBag.ID })
        <div class="form-group">
            @Html.LabelFor(model => model.do_an_chi_tiet.do_an.ten, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.DropDownListFor(model => model.do_an_chi_tiet_id, ViewBag.DACTList as SelectList, "---- Chọn ----", new { @class = "form-control", @onchange = "onInput_HoaDon('da')" })
                @Html.ValidationMessageFor(model => model.do_an_chi_tiet_id, "", new { @class = "text-danger" })
            </div>
            @Html.DropDownListFor(model => model.do_an_chi_tiet_id, ViewBag.PriceList as SelectList, "", new { @class = "form-control", id = "price", hidden = "true" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.so_luong, htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.EditorFor(model => model.so_luong, new { htmlAttributes = new { @class = "form-control", @Value = "1", @onInput = "onInput_HoaDon('sl')" } })
                @Html.ValidationMessageFor(model => model.so_luong, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <p><i class="fas fa-dollar-sign"></i> Tổng Tiền: <span id="tongtien">0</span> VND</p>
        <div class="form-group" style="padding-top:10px">
            <center>
                <input type="submit" value="Thêm" class="col-5 btn btn-primary" />
            </center>
        </div>
    </div>

}

@Scripts.Render("~/bundles/jqueryval")