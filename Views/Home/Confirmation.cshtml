@model QLBanVePhim.Models.ve_dat

@{
    ViewBag.Title = "Confirmation";
    Layout = "~/Views/Shared/SharedHomepage.cshtml";
}
<style>
    #xacNhan{
        justify-content:center;
        align-items:center;
        text-align:center;
        color:aliceblue;
        width:80%;
        margin:auto;         
    }

    #ve{
        color:black;
        width:700px;
        margin:auto;
    }
</style>

<div id="xacNhan">
    <h1 style="color:aquamarine">-ĐẶT THÀNH CÔNG-</h1>
    <h2>CẢM ƠN BẠN ĐÃ ĐẶT VÉ</h2>
    <p>VUI LÒNG TRÌNH DIỆN VÉ KHI GẶP NHÂN VIÊN TẠI QUẦY</p>
    <div class="card" id="ve">
        <div class="card-header">
            <h1 style="font-family:'Berlin Sans FB'">CINESTAR</h1>
            <p>VÉ ĐẶT</p>
        </div>
        <div class="card-body">
            @try
            {
                <h2>@TempData["CodeDatVe"].ToString()</h2>
                <div class="container-fluid">
                    <div class="row" style="font-size:25px;font-weight:bold">
                        <div class="col-6">
                            MÃ KHÁCH HÀNG:
                            <br />
                            PHIM:
                            <br />
                            THỜI LƯỢNG:
                            <br />
                            THỜI GIAN BẮT ĐẦU:
                            <br />
                            TỔNG TIỀN:
                        </div>
                        <div class="col-6">
                            @TempData["MaKhachHang"].ToString()
                            <br />
                            @TempData["Phim"].ToString()
                            <br />
                            @TempData["ThoiLuong"].ToString()
                            <br />
                            @TempData["BatDau"].ToString()
                            <br />
                            @TempData["TongTien"].ToString()
                        </div>
                    </div>
                </div>
            }
            catch
            {
                <p style="color:red">LỖI KHÔNG CÓ VÉ ĐỂ HIỂN THỊ</p>
            }
        </div>
        <div class="card-footer">
            Có thắc mắc? Vui lòng gọi số <br />
            098xxxxxxxxx
        </div>

    </div>
</div>
