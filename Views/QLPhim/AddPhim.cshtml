                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 10px; padding-bottom: 10px;">@Html.LabelFor(model => model.id)</td>
                        <td>@Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control" } })</td>
                    </tr>

                </table>


            </div>
            <div>

            </div>
            <div class="form-group">
                <center>
                    <input type="submit" value="Thêm phim">
                </center>
            </div>
        </div>
    </div>
    
</div>
