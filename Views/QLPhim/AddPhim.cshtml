                        @Html.LabelFor(model => model.tom_tat, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.TextAreaFor(model => model.tom_tat, new { @class = "form-control", @onInput = "onInput_Phim('tt')" })
