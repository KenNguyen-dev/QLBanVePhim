@model IEnumerable<QLBanVePhim.Models.phim>
@{
    ViewBag.Title = "QLPhim";
    Layout = "~/Views/Shared/ViewQLHome.cshtml";
}

<div class="left">
    <div class="card">
        <div class="card-body">
            <Center><h3>Tra cứu phim</h3></Center>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Tên phim
                </label>
                <div class="input-group mb-3">
                    <span class="input-group-text">ID</span>
                    <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                </div>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Ngày công chiếu
                </label>
                <div class="input-group mb-3">
                    <span class="input-group-text">Tên</span>
                    <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                </div>
            </div>
            <br>
            <div>
                <center>
                    <input type="button" class="btn btn-success" onclick="location.href='/QLPhim/AddPhim';" value="Thêm phim" />
                </center>
            </div>
        </div>
    </div>
</div>
<div class="right">
    <div class="card">
        <div class="card-body">
            <div class="container">
                <table class="table table-hover shadow p-3 mb-5 bg-white rounded">
                    <thead class="thead-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ten)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.thoi_luong)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ngay_cong_chieu)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr> <td colspan="5"> Records not found </td></tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr onclick="window.location.href = '/QLPhim/EditPhim/@Html.DisplayFor(modelItem => item.id)';">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ten)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.thoi_luong) Phút
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ngay_cong_chieu)
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>