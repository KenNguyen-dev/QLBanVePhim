@model QLBanVePhim.Models.phim
@{
    ViewBag.Title = "AddPhim";
    Layout = "~/Views/Shared/ViewQLHome.cshtml";
}


<style>
    .col-sm {
        border: 1px solid black;
        padding: 5px;
    }

    label {
        color: #000020;
        font-size: 20px;
        font-family: serif;
        padding-left: 10px
    }

    td {
        padding-left: 5px;
    }

    .input1 {
        width: 100%;
        padding-left: 10px;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="right" style="">
